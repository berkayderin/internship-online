// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(cuid()) @map("_id")
  fullname     String?
  email        String  @unique
  passwordHash String
  role         String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
